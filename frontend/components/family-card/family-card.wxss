
.view_image_text {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 280rpx;
  background-color: #fff;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.16);
  border-radius: 30rpx;
  margin-left: -40%;
  margin-top: 10px;
}

.user_profile {
  width: 80px;
  height: 80px;
  border-radius: 50%;
  margin-right: 10px;
}

.user_name {
  margin-top: -20px;
  font-size: 20px;
}

.user_tag {
  margin-top: -20px;
  font-size: 16px;
  height: 30px;
  background: #f0f8ff;
  border: 1rpx solid #4095E5;
  border-radius: 10rpx;
  text-align: center;
  color: #4095E5;
  line-height: 62rpx;
  margin-left: 5px;
}

.user_signature {
  font-size: 15px;
  color: #666666;
  margin-left: -100px;
  margin-top: 60px;
}