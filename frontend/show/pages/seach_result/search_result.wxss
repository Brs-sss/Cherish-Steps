/* pages/show/seach_result/search_result.wxss */


.container {
  text-align: center;
  padding: 0;
  margin-top: 2vh;
}

.add{
  width: 50px;
  height: 50px;
  color: rgba(255, 255, 255, 0);
  position: fixed;
  bottom: 10px;
  right: 10px;
}

.add_icon{
  width: 50px;
  height: 50px;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.16);
  border-radius: 100rpx;
  background-color: rgba(255, 255, 255, 0.63);
}

.overlay {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0);
}

.popup-container{
  /*position: relative;*/
  width: 100%;
  height: 100%;
}

.popup {
  position: fixed;
  right: -40px;
  bottom: 70px;

  width: 210rpx;
  height: 270rpx;
  transform: translateX(-50%);
  background-color: #fff;
  padding: 10rpx;
  border-radius: 8rpx;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.1);
}

.list-item {
  position: relative;
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 100%;
  height: 90rpx;
}

.item-image {
  width: 60rpx;
  height: 60rpx;
  margin: 20rpx;
}

.item-text {
  color: gray;
  font-size: 26rpx;
  margin-left: 0rpx;
}

.line {
  width: 100%;
  height: 3rpx;
  background: rgba(223, 220, 220, 0.521);
}

.cards-container{
  width: 100vw;
  height: auto;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;

  color: #222;
}


.tag-cont{
  grid-area: 3/1/4/5;
  width: 90vw;
  height: 8vh;
  justify-self: center ;
}

.container_tag{
  grid-area: 3/1/4/5;
  width: 90vw;
  height: 8vh;
  display: flex;
  overflow: scroll;
  flex-wrap: nowrap;
  justify-self: center;
  align-items: center; /* 标签垂直居中对齐 */
  gap: 15px; /* 标签之间的间距 */
}


.tag-empty-tip{
  color: #999;
}

/* 添加滚动条样式，这样滚动条就不可见了，但仍然可以滑动 */
.container_tag::-webkit-scrollbar {
  width: 0.5em;
}

.container_tag::-webkit-scrollbar-track {
  background-color: transparent;
}

.container_tag::-webkit-scrollbar-thumb {
  background-color: transparent;
}

.tag {
  display: inline-block;
  height: 5vw;
  margin-left: 10px;
  margin-right: 5px;
  padding: 4px 8px;
  border-radius: 4px;
  background: #f0f8ff;
  border: 1rpx solid #4095E5;
  border-radius: 10rpx;
  font-size: 28rpx;
  text-align: center;
  color: #4095E5;
  cursor: pointer;
  white-space: nowrap; 
}

.tag.selected {
  background-color: #007bff;
  color: #fff;
}

.tag .tag-text {
  /* margin-bottom: 3px; */
  font-size: 14px;
}



