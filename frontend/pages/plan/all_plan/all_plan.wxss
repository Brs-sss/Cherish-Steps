#bar {
  width: 100vw; 
  height: 48px; 
  background-color: rgba(135, 207, 235, 0.25);

  display: flex;
  flex-direction: row;
  align-items: center;
}

#bar image{
  position: absolute;
  right: 5%;
  width: 36px;
  height: 36px;
}
.planContent {
  position: relative;
  left: 6vw;
  width: 88vw;
  height: 80px;
  margin-top: 20px;
  box-shadow: 2px 2px 6px lightgray;
  border-radius: 10px;

  display: flex;
  flex-direction: row;
  align-items: center;

  overflow: hidden;
}

.planName {
  position: absolute;
  left: 10vw;

  color: #FFF;
  font-size: 24px;
  font-weight: bold;

  text-shadow: 2px 2px 4px rgba(128, 128, 128, 0.75);
  -webkit-text-stroke: 0.5rpx #000;
}

.bgImg {
  position: absolute;
  height: 100%;
  width: calc(100% + 2px);
  opacity: 0.65;
}