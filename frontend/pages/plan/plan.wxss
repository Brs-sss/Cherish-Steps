/* pages/plan/plan.wxss */

.container_todo{
  position: relative;
  left: 7.5%;
  width: 80%;
  margin-bottom: 3vh;
  margin-top: 3vh;
}

.todo-header {
  font-size: 4vh;
  color: #4095E5;
}

.scroll-view {
  height: 35vh; 
  width: 50vh;
  overflow-y: scroll; 
  background-color: #4095e52c;
  margin-top: 1vh;
  border-radius: 1vh;
}

.todo-list {
  display: flex;
  flex-wrap: wrap;
  flex-direction: column;
}

.todo-item {
  padding: 2vh;
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-bottom: 1vh;
  height: 2vh;
}

.completed {
  text-decoration: line-through;
}

.btn-area{
  width: 100%;
  height: 5vh;
  text-align: right;
}

.btn-area button{
  margin-top: 1vh;
  height: 4vh;
  width: 5vh;

  background: #f0f8ff;
  border: 1rpx solid #4095E5;
  border-radius: 10rpx;
  font-size: 28rpx;
  color: #4095E5;

  display: flex;
  float: right;
  align-items: center;
  justify-content: center;
}

.container_plan {
  position: relative;
  left: 7.5%;
  width: 80%;
  margin-bottom: 3vh;
  margin-top: 3vh;
}

.plan-header {
  font-size: 4vh;
  color: #4095E5;
}

.plan-list {
  display: flex;
  flex-direction: column;
  margin-top: 1vh;
}

.plan-item {
  padding: 2vh;
  width: 50vh;
  height: 2vh;
  font-size: large;
  margin-bottom: 1vh;
}

.add-plan{
  padding: 2vh;
  height: 2vh;
  color: rgba(200, 200, 200);
}

.plan-input{
  position: relative;
  margin-top: -4vh;
  margin-left: 2vh;
  height: 3vh;
  background-color: rgb(250, 250, 250);
  z-index: 1;
}

.line {
  width: 100%;
  height: 3rpx;
  background: rgba(220, 220, 220, 0.5);
}

.image-arrow {
  width: 60rpx;
  height: 60rpx;
  margin-top: -5vh;
  margin-left: 40vh;
  right: 0; /* 靠右调节 */
}
