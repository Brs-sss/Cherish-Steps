/* pages/plan/plan.wxss */

.bgImg {
  position: absolute;
  height: 100%;
  width: calc(100% + 2px);
  opacity: 0.65;
  /* filter: blur(3px); */
}

.placeHolder{
  height: 10vh;
}
.container_todo{
  position: relative;
  left: 5%;
  width: 90%;
  margin-bottom: 3vh;
  /* margin-top: 3vh; */
  top: 3vh;
  background-color: rgba(240, 242, 243, 0.397);
  box-shadow: 2px 2px 6px rgb(141, 137, 137);
  border-radius: 2vh;
  backdrop-filter: blur(10px);
}

.todo-header {
  position: relative;
  font-size: 3vh;
  color: #0759a5;
  margin-left: 2vh;
  top: 1vh;
}

.content {
  height: auto; 
  width: 100%;
  /* overflow-y: scroll;  */
  /* background-color: #78beff2c; */
  margin-top: 1vh;
  border-radius: 1vh;
}

.todo-list {
  display: flex;
  flex-wrap: wrap;
  flex-direction: column;
}

.todo-item {
  padding: 2vh;
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-bottom: 1px;
  margin-top: 1px;
  height: 2vh;
}

.todo-item checkbox .wx-checkbox-input{
  width: 18px;
  height: 18px;
  border-radius: 50%;
  border-color: #4095E5;
}

.task_name {
  position: relative;
  left: 1vw;
  font-size: 2.2vh;
  /* font-size: 16px; */
}

.left_days {
  position: absolute;
  right: 5vw;

  color: #494955;
  /* font-size: 15px; */
  font-size: 2vh;
}

.container_plan {
  position: relative;
  left: 5%;
  width: 90%;
  margin-bottom: 3vh;
  margin-top: 7vh;
  background-color: rgba(240, 242, 243, 0.397);
  box-shadow: 2px 2px 6px rgb(141, 137, 137);
  border-radius: 2vh;
  backdrop-filter: blur(10px);
}

.plan-header {
  position: relative;
  width: 70vh;
  font-size: 3vh;
  color: #0759a5;
  margin-left: 2vh;
  margin-bottom: 1vh;
  top: 1vh;
}

.plan-list {
  display: flex;
  flex-direction: column;
  margin-top: 1vh;
  width: 100%;
  overflow: hidden;
}

.plan-item {
  padding: 2vh;
  padding-left: 1vh;
  width: 100%;
  height: 1.5vh;
  /* font-size: large; */
  font-size: 2.3vh;
  margin-bottom: 1vh;
}
.plan-name{
  padding-left: 1vh;
  position: relative;
  top: -1vh;
}
.add-text{
  color: rgb(56, 98, 109);
  margin-bottom: 1vh;
  font-size: 2.2vh;
}
.add-plan{
  padding: 2vh;
  height: 2vh;
  color: rgba(200, 200, 200);
}

.plan-input{
  position: relative;
  margin-top: -4vh;
  margin-left: 2vh;
  height: 3vh;
  background-color: rgb(250, 250, 250);
  z-index: 1;
}

.line {
  width: 100%;
  height: 3rpx;
  background: rgba(220, 220, 220, 0.5);
}

.image-arrow {
  width: 90rpx;
  height: 90rpx;
  top: -5vh;
  right: -10px;
  position: relative;
  right: 0px; /* 靠右调节 */
  background-color: aliceblue;
}

