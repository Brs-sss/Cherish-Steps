/* pages/plan/plan.wxss */

.container_todo{
  width: 80vh;
  margin-bottom: 3vh;
  margin-top: 2vh;
  margin-left: 2vh;
}

.todo-header {
  font-size: 4vh;
}

.scroll-view {
  height: 40vh; 
  width: 50vh;
  overflow-y: scroll; 
  background-color: rgb(250, 250, 250);
  margin-top: 1vh;
  border-radius: 1vh;
}

.todo-list {
  display: flex;
  flex-wrap: wrap;
  flex-direction: column;
}

.todo-item {
  padding: 2vh;
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-bottom: 1vh;
  height: 2vh;
}

.completed {
  text-decoration: line-through;
}

.container_plan {
  width: 80vh;
  margin-top: 2vh;
  margin-left: 2vh;
}

.plan-header {
  font-size: 4vh;
}

.plan-list {
  display: flex;
  flex-direction: column;
  margin-top: 1vh;
}

.plan-item {
  padding: 2vh;
  width: 50vh;
  height: 2vh;
  font-size: large;
  margin-bottom: 1vh;
}

.add-plan{
  padding: 2vh;
  height: 2vh;
  color: rgba(200, 200, 200);
}

.plan-input{
  position: relative;
  margin-top: -4vh;
  margin-left: 2vh;
  height: 3vh;
  background-color: rgb(250, 250, 250);
  z-index: 1;
}

.line {
  width: 100%;
  height: 3rpx;
  background: rgba(220, 220, 220, 0.5);
}

.image-arrow {
  width: 60rpx;
  height: 60rpx;
  margin-top: -5vh;
  margin-left: 40vh;
  right: 0; /* 靠右调节 */
}
