/* pages/plan/plan.wxss */

.container_todo{
  position: relative;
  left: 7.5%;
  width: 80%;
  margin-bottom: 3vh;
  margin-top: 3vh;
}

.todo-header {
  font-size: 4vh;
  color: #4095E5;
}

.content {
  height: auto; 
  width: 50vh;
  overflow-y: scroll; 
  background-color: #78beff2c;
  margin-top: 1vh;
  border-radius: 1vh;
}

.todo-list {
  display: flex;
  flex-wrap: wrap;
  flex-direction: column;
}

.todo-item {
  padding: 2vh;
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-bottom: 1px;
  margin-top: 1px;
  height: 2vh;
}

.todo-item checkbox .wx-checkbox-input{
  width: 18px;
  height: 18px;
  border-radius: 50%;
}

.task_name {
  position: relative;
  left: 1vw;
  font-size: 16px;
}

.left_days {
  position: absolute;
  right: 5vw;

  color: rgb(150, 150, 150);
  font-size: 15px;
}

.container_plan {
  position: relative;
  left: 7.5%;
  width: 80%;
  margin-bottom: 3vh;
  margin-top: 3vh;
}

.plan-header {
  display: flex;
  width: 70vh;
  font-size: 4vh;
  color: #4095E5;
}

.plan-list {
  display: flex;
  flex-direction: column;
  margin-top: 1vh;
}

.plan-item {
  padding: 2vh;
  width: 50vh;
  height: 2vh;
  font-size: large;
  margin-bottom: 1vh;
}

.add-plan{
  padding: 2vh;
  height: 2vh;
  color: rgba(200, 200, 200);
}

.plan-input{
  position: relative;
  margin-top: -4vh;
  margin-left: 2vh;
  height: 3vh;
  background-color: rgb(250, 250, 250);
  z-index: 1;
}

.line {
  width: 100%;
  height: 3rpx;
  background: rgba(220, 220, 220, 0.5);
}

.image-arrow {
  width: 100rpx;
  height: 100rpx;
  margin-top: -16rpx;
  position: absolute;
  right: 0; /* 靠右调节 */
}
