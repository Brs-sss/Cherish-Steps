/* pages/generate/chart/chart.wxss */

.submit{
  background-color: #4095E5;
  color: #fff;
  border-radius: 100px;
  box-shadow: 0 10rpx 10rpx rgba(0, 0, 0, 0.16);
  font-size: 14px;
  display: block;
  box-sizing: border-box;
  margin-bottom: 10rpx;
}

.container_tag{
  width: 95vw;
  height: 8vh;
  display: flex;
  overflow: scroll;
  flex-wrap: nowrap;
  justify-self: center;
  align-items: center; /* 标签垂直居中对齐 */
  gap: 15px; /* 标签之间的间距 */
  margin-left: 4vw;
}

.tag-empty-tip{
  color: #999;
}

/* 添加滚动条样式，这样滚动条就不可见了，但仍然可以滑动 */
.container_tag::-webkit-scrollbar {
  width: 0.5em;
}

.container_tag::-webkit-scrollbar-track {
  background-color: transparent;
}

.container_tag::-webkit-scrollbar-thumb {
  background-color: transparent;
}

.tag {
  display: inline-block;
  height: 5vw;
  padding: 4px 8px;
  border-radius: 4px;
  background: #f0f8ff;
  border: 1rpx solid #4095E5;
  border-radius: 10rpx;
  font-size: 28rpx;
  text-align: center;
  color: #4095E5;
  cursor: pointer;
  white-space: nowrap; 
}

.tag.selected {
  background-color: #007bff;
  color: #fff;
}

.tag .tag-text {
  /* margin-bottom: 3px; */
  font-size: 14px;
}


.ec-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 100vw;
  height: 30vh;
}

ec-canvas {
  width: 100%;
  height: 100%;
}
