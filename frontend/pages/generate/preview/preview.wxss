@import "/pages/generate/generate.wxss";


.container{
  margin: 0;
  padding:0;
  width: 100vw;
  display: flex;
  flex-direction: column;
}

.preview_container{
  width: 100%;
  height: 50vh;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.image-player{
  border: 1px solid grey;
  width: 60vw;
  height: 84.9vw;
}

.image-player image{
  width: 100%;
  height: 100%;
}

.select_container{
  width: 100%;
  height: 100vh;
  position: relative;
}

