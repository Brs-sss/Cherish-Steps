#button-box{
  width: 50vw;
  height: 10vh;
  display: flex;
  justify-content: center;
  align-items: center;
}



.submit{
  width: 100%;
  height: 80rpx;
  background-color: #4095E5;
  color: #fff;
  border-radius: 100px;
  box-shadow: 0 10rpx 10rpx rgba(0, 0, 0, 0.16);
  font-size: 1.2em;
  line-height: 60rpx !important;
  text-align: center !important;
  vertical-align: middle !important;
}