.container{
  margin: 0;
  padding:0;
  width: 100vw;
  display: flex;
  flex-direction: column;
}



.preview_container{
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin-top: 10vh;
}

.image-player{
  border: 1px solid grey;
  width: 80vw;
  height:106vw; /*照片的高度*/
  display: flex;
  flex-direction: column;
  flex-wrap: nowrap;
  overflow: scroll;
  justify-self: center;
  align-items: center; /* 标签垂直居中对齐 */
  gap: 2vh; 
  background-color: #666;
}

.image-container{
  display: inline-block;
  width: 75vw;
  height:calc(75vw * 1.414);
  align-self: center;
}

.image-player image{
  width: 75vw;
  height:calc(75vw * 1.414);
}

/* 添加滚动条样式，这样滚动条就不可见了，但仍然可以滑动 */
.image-player ::-webkit-scrollbar {
  width: 0;
  visibility: hidden;
}

.image-player ::-webkit-scrollbar-track {
  background-color: transparent;
  visibility: hidden;
}

.image-player ::-webkit-scrollbar-thumb {
  background-color: transparent;
  visibility: hidden;
}

scroll-view{
  padding: 0;
  overflow: hidden;
}

scroll-view ::-webkit-scrollbar {
  width: 0;
  /* display: none; */
}

.select_container{
  width: 100%;
  height: 100vh;
  position: relative;
}

