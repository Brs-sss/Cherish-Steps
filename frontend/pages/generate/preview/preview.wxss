.select_container{
  width: 100%;
  height: 100vh;
  position: relative;
}


#button-box{
  width: 50vw;
  height: 10vh;
  display: flex;
  justify-content: center;
  align-items: center;
}



.submit{
  width: 100%;
  height: 80rpx;
  background-color: #4095E5;
  color: #fff;
  border-radius: 100px;
  box-shadow: 0 10rpx 10rpx rgba(0, 0, 0, 0.16);
  font-size: 1.2em;
  line-height: 60rpx !important;
  text-align: center !important;
  vertical-align: middle !important;
}


.custom-tabbar{
  display: flex;
  flex-direction: column;
  position: relative;
  margin-top: 10vh;
  /* bottom: 0vh; */
  margin-left: 5%;
  width: 90%;
  /* backdrop-filter: blur(10px);
  background-color: rgba(240, 242, 243, 0.3);
  border-radius: 20px; */
  background-color: rgba(240, 242, 243, 0.397);
  /* box-shadow: 2px 2px 6px rgb(141, 137, 137); */
  border-radius: 2vh;
  backdrop-filter: blur(10px);
}

.title {
  margin-top: 3vh;
  margin-bottom: 3vh;
  margin-left: 5vh;
  font-size: 3vh;
}

.icons {
  display: flex;
  flex-direction: row;
  margin-top: 1vh;
  margin-left: 10%;
  width: 80%;
  align-items: center;
  justify-content: space-between;
}

.icons-text {
  font-size: 1.3vh;
  display: flex;
  flex-direction: row;
  margin-left: 9.5%;
  width: 77%;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 1vh;
}
