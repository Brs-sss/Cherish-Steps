.container{
  margin: 0;
  padding:0;
  width: 100vw;
  display: flex;
  flex-direction: column;
}

.preview_container{
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin-top: 10vh;
}

.image-player{
  border: 1px solid grey;
  width: 80vw;
  height:calc(80vw * 1.414);
  display: flex;
  flex-direction: column;
  overflow: scroll;
  justify-self: center;
  align-items: center; /* 标签垂直居中对齐 */
  gap: 2vh;
}

.image-player image{
  width: 100%;
  height: 100%;
}

/* 添加滚动条样式，这样滚动条就不可见了，但仍然可以滑动 */
.image-player::-webkit-scrollbar {
  width: 0.5em;
}

.image-player::-webkit-scrollbar-track {
  background-color: transparent;
}

.image-player::-webkit-scrollbar-thumb {
  background-color: transparent;
}

.select_container{
  width: 100%;
  height: 100vh;
  position: relative;
}

