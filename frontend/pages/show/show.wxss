/* pages/show/show.wxss */
.container {
  text-align: center;
  padding: 0;
}

.add{
  width: 50px;
  height: 50px;
  color: rgba(255, 255, 255, 0);
  position: fixed;
  bottom: 10px;
  right: 10px;
}

.add_icon{
  width: 50px;
  height: 50px;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.16);
  border-radius: 100rpx;
}

.overlay {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0);
}

.popup {
  position: fixed;
  right: -40px;
  bottom: 70px;
  margin-top: 145px;
  margin-left: 90px;
  width: 210rpx;
  height: 270rpx;
  transform: translateX(-50%);
  background-color: #fff;
  padding: 10rpx;
  border-radius: 8rpx;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.1);
}

.list-item {
  position: relative;
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 100%;
  height: 90rpx;
}

.item-image {
  width: 60rpx;
  height: 60rpx;
  margin: 20rpx;
}

.item-text {
  color: gray;
  font-size: 26rpx;
  margin-left: 0rpx;
}

.line {
  width: 100%;
  height: 3rpx;
  background: rgba(223, 220, 220, 0.521);
}




