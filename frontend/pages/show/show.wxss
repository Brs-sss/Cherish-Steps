/* pages/show/show.wxss */
.container {
  text-align: center;
  padding: 0;
  margin-top: 2vh;
}

.add{
  width: 50px;
  height: 50px;
  color: rgba(255, 255, 255, 0);
  position: fixed;
  bottom: 100px;
  right: 10px;
}

.add_icon{
  width: 50px;
  height: 50px;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.16);
  border-radius: 100rpx;
}

.overlay {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0);
}

.popup-container{
  /*position: relative;*/
  width: 100%;
  height: 100%;
}

.popup {
  position: fixed;
  right: -40px;
  bottom: 70px;

  width: 210rpx;
  height: 270rpx;
  transform: translateX(-50%);
  background-color: #fff;
  padding: 10rpx;
  border-radius: 8rpx;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.1);
}

.list-item {
  position: relative;
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 100%;
  height: 90rpx;
}

.item-image {
  width: 60rpx;
  height: 60rpx;
  margin: 20rpx;
}

.item-text {
  color: gray;
  font-size: 26rpx;
  margin-left: 0rpx;
}

.line {
  width: 100%;
  height: 3rpx;
  background: rgba(223, 220, 220, 0.521);
}

.cards-container{
  width: 100vw;
  height: auto;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  backdrop-filter: blur(10px);
  background-color: rgba(240, 242, 243, 0.3);
  border-radius: 20px;
  color: #222;
}

.custom-tabbar{
  display: flex;
  flex-direction: column;
  position: fixed;
  bottom: 0vh;
  margin-left: 5%;
  width: 90%;
  backdrop-filter: blur(10px);
  background-color: rgba(240, 242, 243, 0.3);
  border-radius: 20px;
  margin-bottom: 3vh;
}

.icons {
  display: flex;
  flex-direction: row;
  margin-top: 1vh;
  margin-left: 10%;
  width: 80%;
  align-items: center;
  justify-content: space-between;
}

.icons-text {
  font-size: 1.3vh;
  display: flex;
  flex-direction: row;
  margin-left: 11.5%;
  width: 77%;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 1vh;
}

.selected-text{
  color: #0759a5;
}
.placeHolder{
  height: 10vh;
}
.bgImg {
  position: absolute;
  height: 100%;
  width: calc(100% + 2px);
  opacity: 0.65;
  /* filter: blur(3px); */
}

