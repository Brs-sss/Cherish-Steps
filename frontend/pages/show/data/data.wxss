/* pages/show/data/data.wxss */

#overlay {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
}

#upload_area {
  position: relative;
  width: 88vw;
  top: 3vh;
  left: 6vw;
}

.text {
  font-size: 14px;
  color: #333;
}

.line {
  margin-top: 5px;
  width: 100%;
  height: 1px;
  background-color: lightgray;
}

#addButton {
  position: absolute;
  top: -1px;
  right: 10px;

  width: 24px;
  height: 24px;
}

.dataItem {
  width: 100%;
  height: 60px;
  background-color: rgb(236, 236, 238);

  display: flex;
  align-items: center;
}

.dataKey {
  position: relative;
  top: 8px;
  left: 2%;
  width: 24%;
  height: 40px;

  text-align: right;
}
.dataBar {
  position: relative;
  left: 5%;
  width: 64%; 
  height: 70rpx;
  border: 1px solid lightgray; 
  border-radius: 10rpx;
}

.textCenter {
  vertical-align: center;
}

.spacing {
  margin-top: 40px;
  width: 100%;
  display: flex;    /*设置显示样式**/
  vertical-align: center; /**垂直居中*/
  justify-content: center; /**内容居中*/
}

