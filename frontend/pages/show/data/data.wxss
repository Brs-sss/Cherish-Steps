/* pages/show/data/data.wxss */

#overlay {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
}

#upload_area {
  position: relative;
  width: 88vw;
  top: 3vh;
  left: 6vw;
}

.text {
  font-size: 14px;
  color: #333;
}

.line {
  margin-top: 5px;
  width: 100%;
  height: 1px;
  background-color: lightgray;
}

#addBtn {
  position: absolute;
  top: -1px;
  right: 10px;

  width: 24px;
  height: 24px;
}

.tag-cont{
  grid-area: 3/1/4/5;

  width: 88vw;
  height: 40px;
  justify-self: center ;
}

.container_tag{
  grid-area: 3/1/4/5;
  width: 88vw;
  height: 8vh;
  display: flex;
  overflow: scroll;
  flex-wrap: nowrap;
  justify-self: center;
  align-items: center; /* 标签垂直居中对齐 */
  gap: 15px; /* 标签之间的间距 */
}

.tag-empty-tip{
  position: relative;
  top: 5px;
  color: #999;
}

/* 添加滚动条样式，这样滚动条就不可见了，但仍然可以滑动 */
.container_tag::-webkit-scrollbar {
  width: 0.5em;
}
.container_tag::-webkit-scrollbar-track {
  background-color: transparent;
}
.container_tag::-webkit-scrollbar-thumb {
  background-color: transparent;
}

.tag {
  display: inline-block;
  height: 5vw;
  padding: 4px 8px;
  border-radius: 4px;
  background: #f0f8ff;
  border: 1rpx solid #4095E5;
  border-radius: 10rpx;
  font-size: 28rpx;
  text-align: center;
  color: #4095E5;
  cursor: pointer;
  white-space: nowrap; 
}

.tag .tag-text {
  /* margin-bottom: 3px; */
  font-size: 14px;
}

.dataItem {
  width: 100%;
  height: 60px;

  display: flex;
  align-items: center;
}

.dataKey {
  position: relative;
  top: 8px;
  left: 2%;
  width: 24%;
  height: 40px;

  text-align: right;
}

.dataBar {
  position: relative;
  left: 5%;
  width: 64%; 
  height: 70rpx;
  border: 1px solid lightgray; 
  border-radius: 10rpx;
}

.textCenter {
  vertical-align: center;
}

#newTitleBar {
  position: relative;
  left: 4%;
  width: 20%;
  margin-right: 3.4%;
  height: 70rpx;
  border: 1px solid lightgray; 
  border-radius: 10rpx;

  text-align: center;
  font-size: 14px;
}

@keyframes fadein {
  from {opacity: 0.2;}
  to {opacity: 1;}
}

.fadein {
  animation-name: fadein;
  animation-duration: 0.25s;
  animation-timing-function: ease-in-out;
}

.spacing {
  margin-top: 40px;
  width: 100%;
  display: flex;    /*设置显示样式**/
  vertical-align: center; /**垂直居中*/
  justify-content: center; /**内容居中*/
}

.submit{
  margin-bottom: 100px;
  width: 100%;
  height: 80rpx;

  background-color: #4095E5;
  color: #fff;

  border-radius: 100px;
  box-shadow: 0 10rpx 10rpx rgba(0, 0, 0, 0.16);
  font-size: 14px;
}
