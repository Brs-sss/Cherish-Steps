.overall-outfit{
  padding: 20rpx;
  width: 100%;
}

.weui-cells__title {
  font-size: 1.7vh;
}
.weui-label{
  font-size: 2vh;
  color: rgb(68, 68, 68);

}
.weui-input, .weui-select {
  font-size: 2vh;
}


.container_1 {
  grid-area: A;
  font-size: 14px;

}

#title-box1{
  height: 100%;
  width: 15%;
  display: flex;
  align-items: center;
}

.input {
  position: absolute;
  width: 250px;
  height: 20px;
  margin-top: -38px;
  margin-left: 40px;
  padding: 10rpx;
  border: 1rpx solid rgba(220, 220, 220, 0.5);
  border-radius: 4rpx;
}

.result {
  margin-top: 20rpx;
}

.container_2 {
  grid-area: B;
  font-size: 14px;
}

.upload_title {
  width: 100%;
  height: 5vh;
  border-radius: 100px;
  color: #333;
}

.upload_icon{
  position: absolute;
  width: 20px;
  height: 20px;
  margin-top: 2px;
}


.image-list {
  white-space: nowrap;
  overflow-x: auto;
}


